{
  "package": {
    "productName": "Tauri YouTube OAuth",
    "version": "0.1.0"
  },
  "tauri": {
    "bundle": {
      "active": true,
      "identifier": "com.ytlite.oauth",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "targets": "all"
    },
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "window": {
        "all": false,
        "close": true,
        "hide": true,
        "maximize": true,
        "minimize": true,
        "show": true,
        "startDragging": true
      }
    },
    "windows": [
      {
        "title": "Tauri YouTube OAuth",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "minHeight": 400,
        "minWidth": 600
      }
    ],
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "security": {
      "csp": null
    }
  },
  "build": {
    "distDir": "/home/tom/github/tom-sapletta-com/ytlite/tauri-youtube-oauth/dist",
    "devPath": "http://localhost:1421",
    "beforeDevCommand": "npm run vite-dev -- --port=1421",
    "beforeBuildCommand": "npm run build:frontend"
  }
}
