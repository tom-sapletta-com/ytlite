# WordPress Docker Environment Configuration
# Copy this to .env.wordpress and update with your values

# WordPress Database Configuration
WORDPRESS_DB_HOST=db
WORDPRESS_DB_USER=wordpress
WORDPRESS_DB_PASSWORD=wordpress_password
WORDPRESS_DB_NAME=wordpress
MYSQL_ROOT_PASSWORD=root_password

# WordPress Admin Configuration
WORDPRESS_ADMIN_USER=admin
WORDPRESS_ADMIN_PASSWORD=admin_password
WORDPRESS_ADMIN_EMAIL=admin@example.com

# WordPress Site Configuration
WORDPRESS_URL=http://localhost:8080
WORDPRESS_TITLE=YTLite Test Site
WORDPRESS_TAGLINE=Testing SVG Project Publishing

# YTLite Integration
WORDPRESS_USERNAME=admin
WORDPRESS_APP_PASSWORD=your_app_password_here
PUBLIC_BASE_URL=http://localhost:8080

# Development Settings
WORDPRESS_DEBUG=1
WP_DEBUG_LOG=1
WP_DEBUG_DISPLAY=0

# Optional: Custom Theme Settings
YTLITE_THEME_NAME=ytlite-theme
YTLITE_THEME_VERSION=1.0.0
